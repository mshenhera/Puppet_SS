# file is managed by puppet

driftfile <%= scope.lookupvar('ntp::driftfile') %>

<% if scope.lookupvar('ntp::interface_ignore').empty? == false then -%>
<% interface_ignore.each do |int_ignore| -%>
interface ignore <%= int_ignore %>
<% end -%>
<% end -%>
<% if scope.lookupvar('ntp::interface_listen').empty? == false then -%>
<% interface_listen.each do |int_listen| -%>
interface listen <%= int_listen %>
<% end -%>
<% end -%>

<% if scope.lookupvar('ntp::enable_statistics') == true -%>
# Enable this if you want statistics to be logged.                             
statsdir <%= scope.lookupvar('ntp::statsdir') %>
statistics loopstats peerstats clockstats
filegen loopstats file loopstats type day enable
filegen peerstats file peerstats type day enable
filegen clockstats file clockstats type day enable
<% end -%>

<% scope.lookupvar('ntp::server_list').each do |server| -%>
server <%= server %>
<% end -%>

<% if scope.lookupvar('ntp::server_enabled') == true -%>
# By default, exchange time with everybody, but don't allow configuration.
restrict -4 default kod notrap nomodify nopeer noquery
restrict -6 default kod notrap nomodify nopeer noquery
<% end -%>

# Local users may interrogate the ntp server more closely.
restrict 127.0.0.1
restrict ::1

<% if scope.lookupvar('ntp::server_enabled') == true -%>
<% if scope.lookupvar('ntp::query_networks').empty? == false -%>
# Clients from this subnet have unlimited access, but only if
# cryptographically authenticated.
# Required for some Nagios checks
<% scope.lookupvar('ntp::query_networks').each do |network| -%>
<% net = network.split('/') -%>
restrict <%= net[0] %> mask <%= net[1] %>
<% end -%>
<% end -%>
<% end -%>
